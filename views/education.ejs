<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
    <% include partials/menu %>
        <div class="container-fluid bg-3 text-center">
            <h3>
                <%= page %>
            </h3><br>
            <div class="row">
                <table class='table table-striped table-responsive-md btm-table'>
                    <thead>

                        <tr>
                            <th>EDUCATION ID</th>
                            <th>INSTITUTE NAME</th>
                            <th>PROGRAM</th>
                            <th>START DATE</th>
                            <th>END DATE</th>
                            <th>PROFILE ID</th>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% educations.forEach(function(education){ %>
                            <tr>
                                <td>
                                    <%=education.educationid %>
                                </td>
                                <td>
                                    <%=education.inst_name %>
                                </td>
                                <td>
                                    <%=education.program %>
                                </td>
                                <td>
                                    <%=education.start_date %>
                                </td>
                                <td>
                                    <%=education.end_date %>
                                </td>
                                <td>
                                    <%=education.profileid %>
                                </td>
                                <td>
                                    <form action='education/updateform/<%=education.educationid %>' method="POST">
                                        <button type="submit">Modify</button>
                                    </form>
                                </td>
                                <td>
                                <form action='/education/<%=education._id %>/delete ' method="POST">
                                        <button type="submit">Delete</button>
                                </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <form action='/education/createform' method="POST">
                    <button type="submit">Add Education</button>
               </form>

            </div>
        </div>
</body>
<% include partials/script %>

</html>