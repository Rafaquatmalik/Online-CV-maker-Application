<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>
<style>
    table,th,tr,td {
        border-collapse: collapse;
        border: 1px solid #d3d3d3;
    }
</style>

<body>
    <% include partials/menu %>
        <div class="container-fluid bg-3 text-center">
            <h3>
                <%= page %>
            </h3><br>
            <div class="row">
                
                <form action="/<%=profile.profileid %>/update" method="POST" >
                    <table class='table table-striped table-responsive-md btm-table'>
                        <tr>
                            <th>Profile ID : </th>
                            <td><input type="number" name='profileid' placeholder='profileid' readonly value='<%=profile.profileid%>'></td>
                        </tr>
                        <tr>
                            <th>Name : </th>
                            <td><input type="text" name='name' placeholder="name" required value='<%=profile.name %>'></td>  
                        </tr>
                        <tr>
                            <th>Email : </th>
                            <td><input type="text" name='email' placeholder="email" required value='<%=profile.email %>'></td>
                        </tr>
                        <tr>
                            <th>MOBILE NO : </th>
                            <td><input type="number" name='mobileno' placeholder="mobileno" required value='<%=profile.mobileno %>'></td>
                        </tr>
                        <tr>
                            <th>Address : </th>
                            <td><input type="text" name='address' placeholder="address" required value='<%=profile.address %>'></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="submit" value="Modify Profile" ></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
</body>
<% include partials/script %>

</html>